# ===========================================
# RAG SYSTEM CONFIGURATION
# ===========================================

# ===========================================
# YANDEX CLOUD CONFIGURATION
# ===========================================

# Основные параметры (ОБЯЗАТЕЛЬНЫЕ при USE_YANDEX_CLOUD=true)
# Получите API ключ в консоли Yandex Cloud: https://console.cloud.yandex.ru/
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_folder_id_here

# Модели по умолчанию
YANDEX_LLM_MODEL=yandexgpt
YANDEX_EMBEDDING_MODEL=text-search-doc

# API настройки
YANDEX_BASE_URL=https://llm.api.cloud.yandex.net
YANDEX_TIMEOUT=30
YANDEX_MAX_TOKENS=2000
YANDEX_TEMPERATURE=0.1

# Retry и обработка ошибок
YANDEX_MAX_RETRIES=3
YANDEX_RETRY_DELAY=1.0
YANDEX_FALLBACK_TO_OLLAMA=true
YANDEX_FALLBACK_TIMEOUT=60

# Лимиты производительности
YANDEX_MAX_REQUESTS_PER_MINUTE=60
YANDEX_MAX_CONCURRENT=10

# Кэширование
YANDEX_ENABLE_CACHING=true
YANDEX_CACHE_DIR=/app/files/cache
YANDEX_CACHE_TTL_HOURS=24
YANDEX_EMBEDDINGS_CACHE_DIR=/app/files/embeddings_cache

# Мониторинг и метрики
YANDEX_ENABLE_METRICS=true
YANDEX_METRICS_FILE=/app/files/yandex_metrics.json
YANDEX_ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# FEATURE FLAGS
# ===========================================
USE_YANDEX_CLOUD=false

# ===========================================
# OLLAMA CONFIGURATION (FALLBACK)
# ===========================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=60
OLLAMA_MAX_RETRIES=3
OLLAMA_LLM_MODEL=gemma3
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=mysql+mysqlconnector://root:123123@localhost:3306/db_test
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development
SECRET_KEY=change-me-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
